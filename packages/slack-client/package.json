{
	"name": "cyrus-slack-client",
	"version": "0.0.1",
	"description": "Slack API client for Cyrus integration",
	"type": "module",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsc",
		"dev": "tsc --watch",
		"test": "vitest",
		"test:run": "vitest run --passWithNoTests",
		"typecheck": "tsc --noEmit"
	},
	"dependencies": {
		"@slack/web-api": "^7.0.0",
		"@slack/events-api": "^3.0.1",
		"@slack/oauth": "^3.0.0",
		"zod": "^3.23.0"
	},
	"devDependencies": {
		"@types/node": "^20.0.0",
		"typescript": "^5.3.3",
		"vitest": "^1.1.0"
	},
	"publishConfig": {
		"access": "public"
	}
}
